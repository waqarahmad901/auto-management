@{
    ViewBag.Title = "Play";
}

<div ng-controller="ResourceController">
    <div id="bodyContainer">
        <div>
            @*<div>{{Error}}</div>*@
            <div class="row">
                <div class="col-sm-8 form-horizontal">
                    <div style="margin-top:10px"></div>
                    <table cellpadding="0" cellspacing="0" border="0" class="display" id="example"></table>
                </div>
                    <span class="item-delete-button">
                        @*<button class="btn btn-default col-lg-3 col-lg-offset-3" data-toggle="modal" data-target="#abc" ng-click="openEntity('empty')">
                            Add New Student
                        </button>*@
                    </span>
                </div>
        </div>
        <!-- Modal Button-->

    </div>

    <div class="modal fade" id="abc" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">{{apiControls.title}}</h4>
                </div>
                <div class="modal-body form-horizontal">
                    <div class="form-group" ng-repeat="parameter in apiControls.controlModelList">
                        <label for="{{parameter.name}}" class="col-sm-3 control-label">{{parameter.label}}</label>
                        <div class="col-sm-9" ng-show="parameter.type === 'textbox'">
                            <input type="{{parameter.type}}" class="form-control" name="{{parameter.name}}" id="{{parameter.name}}" ng-model="apiModels[parameter.id]" placeholder="{{parameter.label}}">
                        </div>
                        <div class="col-sm-9" ng-show="parameter.type === 'dropdown'">
                            <select class="form-control" name="{{parameter.name}}" id="{{parameter.name}}" ng-model="apiModels[parameter.id]" placeholder="{{parameter.label}}">
                                <option ng-repeat="value in parameter.values" value="{{value}}">{{value}}</option>
                            </select>
                        </div>
                        <div class="col-sm-9" ng-show="parameter.type === 'checkbox'">
                            <div ng-repeat="value in parameter.values">
                                <label class="checkbox-inline">
                                    <input type="{{parameter.type}}" id="{{value}}" ng-model="apiModels[value]" value="{{value}}">{{value}}
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-9" ng-show="parameter.type === 'radio'">
                            <div ng-repeat="value in parameter.values">
                                <label class="radio-inline">
                                    <input type="{{parameter.type}}" id="{{value}}" name="{{parameter.name}}" ng-model="apiModels[parameter.id]" value="{{value}}">{{value}}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" ng-click="saveEntity()" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>