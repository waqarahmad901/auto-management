@{
    ViewBag.Title = "Play";
}

<div id="bodyContainer" ng-app="AutoApp">
    <div ng-controller="StudentController">
        <div>{{Error}}</div>
        <div class="row" ng-repeat="student in students">

                <div class="col-md-8">
                    <div class="form-group">
                        <label title="Name" class="col-md-2 control-label">Name: </label>
                    </div>
                    <div class="col-md-10">
                        <label title="{{student.name}}" class="col-md-2 control-label">{{student.name}}</label>
                    </div>
                </div>
            </div>
        
        <div class="row">
            <div class="col-md-8">
                
                <div class="col-md-10">
                    <input type="text" ng-model="student.name" class="col-md-8 form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button ng-click="saveStudent(student)">Save</button>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/app/studentController.js")
}